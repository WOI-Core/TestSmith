{
  "name": "test-smith",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter frontend dev",
    "build": "pnpm --filter frontend build",
    "start": "pnpm --filter frontend start",
    "lint": "pnpm --filter frontend lint",
    "dev:backend": "pnpm --filter backend dev",
    "build:backend": "pnpm --filter backend build",
    "start:backend": "pnpm --filter backend start",
    "lint:backend": "pnpm --filter backend lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:frontend": "jest __tests__/frontend-unit.test.js",
    "test:backend": "jest __tests__/backend-api.test.js",
    "test:e2e": "playwright test __tests__/frontend-e2e.spec.js",
    "test:security": "npm audit && pnpm test:backend",
    "test:all": "npm run test && npm run test:e2e",
    "lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "analyze": "npm run test:coverage && npm run lighthouse"
  },
  "devDependencies": {
    "@types/node": "^22",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.0",
    "typescript": "^5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/user-event": "^14.5.1",
    "@playwright/test": "^1.40.0",
    "supertest": "^6.3.3",
    "lighthouse": "^11.4.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "dependencies": {
    "jest": "^30.0.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/packages/frontend/$1"
    },
    "collectCoverageFrom": [
      "packages/frontend/**/*.{js,jsx,ts,tsx}",
      "packages/backend/**/*.{js,ts}",
      "!packages/**/node_modules/**",
      "!packages/**/.next/**",
      "!packages/**/dist/**"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/packages/**/node_modules/",
      "<rootDir>/packages/**/.next/"
    ]
  }
}
